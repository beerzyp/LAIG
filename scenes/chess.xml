</ILLUMINATION>


<LIGHTS>
	<LIGHT id="light0">
        <enable value ="1" />
        <position  x="0" y="40" z="0" w="1" />
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />
    </LIGHT>

	<LIGHT id="light1">
        <enable value ="1" />
        <position x="40" y="40" z="0" w="1" />
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />
    </LIGHT>

	<LIGHT id="light2">
        <enable value ="1" />
        <position x="0" y="40" z="40" w="1" />
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />
    </LIGHT>

    <LIGHT id="light3">
        <enable value ="1" />
        <position x="40" y="40" z="40" w="1" />
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />
        <specular r="0.6" g="0.6" b="0.6" a="1.0" />
    </LIGHT>

</LIGHTS>

<TEXTURES>
	<TEXTURE id="board">
        <file path="images/tabuleiro.jpg" />
        <amplif_factor s="43.4" t="44" />
    </TEXTURE>
	<TEXTURE id="quadradoBranco">
        <file path="images/quadradobranco.jpg" />
        <amplif_factor s="5" t="5" />
    </TEXTURE>
	<TEXTURE id="quadradoPreto">
        <file path="images/quadradopreto.png" />
        <amplif_factor s="5" t="5" />
    </TEXTURE>
	<TEXTURE id="quadradoVermelho">
        <file path="images/quadradovermelho.png" />
        <amplif_factor s="5" t="5" />
    </TEXTURE>
</TEXTURES>


<MATERIALS>
   
    <MATERIAL id="defaultMaterial">
        <shininess value="1" />
        <specular r="0.0" g="0.0" b="0.0" a="1" />
        <diffuse r="0.4" g="0.4" b="0.4" a="1" />
        <ambient r="0.4" g="0.4" b="0.4" a="1" />
        <emission r="0.0" g="0.0" b="0.0" a="1" />
    </MATERIAL>

</MATERIALS>

<ANIMATIONS>

</ANIMATIONS>


<NODES>

    <ROOT id="root" />

    <NODE id="root">
        <MATERIAL id="defaultMaterial" />
        <TEXTURE id="null" />

        <DESCENDANTS>
            <NODEREF id="tabuleiro" />
			<NODEREF id="quadradoB" />
			<NODEREF id="quadradoP" />
			<NODEREF id="pecaB" />
			<NODEREF id="pecaP" />
        </DESCENDANTS>

    </NODE>
	
	<NODE id ="pecaB">
 		<MATERIAL id ="null" />
        <TEXTURE id="quadradoBranco" />

        <TRANSLATION x="2.5" y="0.1" z="2.5" />
		<ROTATION axis="x" angle="-90" />
		<ROTATION axis="z" angle="-180" />
         <DESCENDANTS>
            <LEAF  type="cylinder" args="2 2.5 0 20 50 1 1" />
        </DESCENDANTS>
    </NODE>
	
	<NODE id ="pecaP">
 		<MATERIAL id ="null" />
        <TEXTURE id="quadradoVermelho" />
	
        <TRANSLATION x="2.5" y="0.1" z="7.5" />
		<ROTATION axis="x" angle="-90" />
		<ROTATION axis="z" angle="-180" />
         <DESCENDANTS>
            <LEAF  type="cylinder" args="2 2.5 0 20 50 1 1" />
        </DESCENDANTS>
    </NODE>
	
	<NODE id ="tabuleiro">
 		<MATERIAL id ="null" />
        <TEXTURE id="board" />

        <TRANSLATION x="-1.85" y="-0.1" z="42" />
		<ROTATION axis="x" angle="-90" />
         <DESCENDANTS>
            <LEAF  type="rectangle" args="0 44 43.4 0" />
        </DESCENDANTS>
    </NODE>
	
    <NODE id ="quadradoB">
 		<MATERIAL id ="null" />
        <TEXTURE id="quadradoBranco" />
		
        <TRANSLATION x="0" y="0" z="10" />
		<ROTATION axis="x" angle="-90" />
         <DESCENDANTS>
            <LEAF  type="rectangle" args="0 5 5 0" />
        </DESCENDANTS>
    </NODE>
	
	<NODE id ="quadradoP">
 		<MATERIAL id ="null" />
        <TEXTURE id="quadradoPreto" />

        <TRANSLATION x="0" y="0" z="5" />
		<ROTATION axis="x" angle="-90" />
         <DESCENDANTS>
            <LEAF  type="rectangle" args="0 5 5 0" />
        </DESCENDANTS>
    </NODE>
	
	
</NODES>



</SCENE>
